<% layout("layouts/boilerplate") %>

<div class="row">
  <h1 class="text-center">New Campground</h1>
  <div class="col-6 offset-3">
    <form action="/campgrounds" method="POST" class="validated-form" novalidate>
      <label class="form-label mt-3" for="title">Title</label>
      <input
        id="title"
        name="campground[title]"
        class="form-control"
        required
      />
      <label class="form-label mt-3" for="location">Location</label>
      <input
        id="location"
        name="campground[location]"
        class="form-control"
        required
      />
      <label class="form-label mt-3" for="image">Image</label>
      <input
        id="image"
        name="campground[image]"
        class="form-control"
        required
      />
      <label class="form-label mt-3" for="description">Description</label>
      <textarea
        id="description"
        name="campground[description]"
        class="form-control"
        required
      ></textarea>

      <div class="my-3">
        <label for="price">Price per night</label>
        <div class="input-group">
          <span class="input-group-text" id="price-label">Â£</span>
          <input
            id="price"
            name="campground[price]"
            class="form-control"
            aria-describedby="price-label"
            required
          />
        </div>
      </div>

      <button class="mt-3 mb-3 btn btn-success">Add Campground</button>
    </form>
    <a href="/campgrounds">All Campgrounds</a>
  </div>
</div>
