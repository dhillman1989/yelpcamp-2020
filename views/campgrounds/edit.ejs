<% layout("layouts/boilerplate") %>

<div class="row">
  <h1 class="text-center">Edit <%= campground.title %></h1>
  <div class="col-6 offset-3">
    <form
      class="validated-form"
      action="/campgrounds/<%=campground.id %>?_method=PUT"
      method="POST"
      novalidate
    >
      <label class="form-label mt-3" for="title">Title</label>
      <input
        id="title"
        name="campground[title]"
        value="<%= campground.title %>"
        class="form-control"
        required
      />
      <p class="invalid-feedback">Field is required</p>
      <label class="form-label mt-3" for="location">Location</label>
      <input
        id="location"
        name="campground[location]"
        value="<%= campground.location %>"
        class="form-control"
        required
      />
      <p class="invalid-feedback">Field is required</p>
      <label class="form-label mt-3" for="image">Image</label>
      <input
        id="image"
        name="campground[image]"
        value="<%= campground.image %>"
        class="form-control"
        required
      />
      <p class="invalid-feedback">Field is required</p>
      <label class="form-label mt-3" for="description">Description</label>
      <textarea
        id="description"
        name="campground[description]"
        class="form-control"
        required
      >
<%= campground.description %></textarea
      >
      <p class="invalid-feedback">Field is required</p>
      <div class="my-3">
        <label for="price">Price per night</label>
        <div class="input-group">
          <span class="input-group-text" id="price-label">Â£</span>
          <input id="price" name="campground[price]" class="form-control"
          value="<%= campground.price%>"" aria-describedby="price-label"
          required/>
          <p class="invalid-feedback">Field is required</p>
        </div>
      </div>
      <button class="mt-3 mb-3 btn btn-success">Update Details</button>
    </form>
    <a href="/campgrounds/<%= campground.id %>">Back</a>
  </div>
</div>
