<% layout("layouts/boilerplate") %>

<div class="row">
  <div class="col-6 offset-3">
    <div class="card mb-3">
      <img
        src="<%= campground.image %>"
        class="card-img-top"
        alt="<%= campground.title %> photo"
      />
      <div class="card-body">
        <h5 class="card-title"><%=campground.title %></h5>
        <p class="card-text text-muted"><%=campground.description %></p>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item"><%=campground.location %></li>
        <li class="list-group-item">Â£<%=campground.price %></li>
      </ul>
      <div class="card-body">
        <a
          class="card-link btn btn-info"
          href="/campgrounds/<%= campground.id %>/edit"
          >Edit</a
        >

        <form
          class="d-inline"
          action="/campgrounds/<%= campground.id %>?_method=DELETE"
          method="POST"
        >
          <button class="btn btn-danger">DELETE</button>
        </form>
      </div>
    </div>
  </div>
</div>
